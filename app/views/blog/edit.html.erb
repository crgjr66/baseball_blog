<h1>Edit a Baseball Blog Post</h1>
<%= form_with url: "/blogs/#{params[:id]}", method: "patch", :class => "form", local:true do |form| %>
    <%= form.label :title%>
    <%= form.text_field :title%>

    <br>
    <%= form.label :content, "What's on your mind?"%>
    <%= form.text_field :content%>

    <br>
    <%= form.submit :submit %>
<% end %>

<p class="home">Back To <%= link_to 'Lets Talk Anything Baseball', blogs_path %></p>
